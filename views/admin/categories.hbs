<section>
    <!-- Modal -->
    <form action="/admin/categories" method="post">
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add category</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input class="p-2 pr-5" type="text" placeholder="Enter category here" name="newCategory"
                            required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <div>
        <table class="table table-striped table-dark content">
            <thead style="margin-top: 70px;">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Category</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{inc @index}}</td>
                    <td>{{this.category}}</td>
                    <td>
                        <a href="/admin/categoryEdit/{{this._id}}">
                            <button type="button" class="btn btn-warning">
                                Edit
                            </button>
                        </a>
                    </td>
                    <td>
                        {{#if this.Disable}}
                            <a href="/admin/categoryEnable/{{this._id}}">
                                <button class="btn btn-primary bg-success"
                                    onclick="return confirm('Are you sure, do you want to enable?')" type="submit"
                                    name="Enable">
                                    Enable
                                </button>
                            </a>
                        {{else}}
                            <a href="/admin/categoryDisable/{{this._id}}">
                                <button class="btn btn-primary bg-danger"
                                    onclick="return confirm('Are you sure, do you want to disable?')" type="submit"
                                    name="Disable">
                                    Disable
                                </button>
                            </a>
                        {{/if}}
                    </td>
                </tr>
                {{/each}}
                <tr>
                    <td> </td>
                    <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                            Add category
                        </button></td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
</section>