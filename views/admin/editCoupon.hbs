<div class="row justify-content-center">
    <div class="p-3 mt-5 col-md-9 col-lg-4 border border-primary" style="border-radius: 0.5rem">
        <div class="d-flex justify-content-center">
            <h2 class="pb-3">Edit coupon</h2>
        </div>
        <form action="/admin/couponEdit/{{datas._id}}" method="post">

            <!-- Name field -->
            <div class="form-outline mb-3">
                <input type="text" id="form2Example2" name="couponCode" class="form-control" placeholder="Enter coupon code" value="{{datas.couponCode}}" required />
            </div>

            <div class="form-outline mb-3">
                <input type="text" id="form2Example2" name="discountPercentage" class="form-control" placeholder="Enter discount percentage" value="{{datas.discountPercentage}}" required />
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Save changes</button>
        </form>
    </div>
</div>