            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Product Name</th>
                            <th>Image</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        {{#each cartProducts}}
                        <tr>
                            <td class="align-middle"><b><a href="/singleProduct/{{this.productId._id}}"
                                        class="text-dark">{{this.productId.Name}}</a></b></td>
                            <td class="align-middle"><img src="{{this.productId.imageurl}}" alt="" style="width: 40px;">
                            </td>
                            <td class="align-middle" id="price{{this.productId._id}}">₹{{this.productId.Price}}</td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-minus"
                                            onclick="changeQuantity('{{this.productId._id}}',-1)">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" id='quantity{{this.productId._id}}'
                                        class="form-control form-control-sm bg-secondary border-0 text-center"
                                        value="{{this.quantity}}" disabled>
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-plus"
                                            onclick="changeQuantity('{{this.productId._id}}',1)">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle" id="productTotal{{this.productId._id}}">₹{{#multiply
                                this.productId.Price this.quantity}}{{/multiply}}</td>
                            <td class="align-middle">
                                <button class="btn btn-sm btn-danger"
                                    onclick="removeFromCart('{{this.productId._id}}')"><i
                                        class="fa fa-times"></i></button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <div class="pl-1">
                    <h2>{{message}}</h2>
                </div>
            </div>
            <div class="col-lg-4">
                <form id="couponForm">
                    <div class="input-group">
                        <input type="text" name="couponCode" class="form-control border-0 p-4"
                            placeholder="Coupon Code" required>
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">Apply Coupon</button>
                        </div>
                    </div>
                </form>
                <p id="invalidCoupon" class="text-danger mt-1 mb-4 ml-1 d-none">Invalid coupon code</p>
                <p id="couponApplied" class="text-success mt-1 mb-4 ml-1 d-none">Coupon Applied</p>
                <h5 class="section-title position-relative text-uppercase mt-5 mb-3"><span
