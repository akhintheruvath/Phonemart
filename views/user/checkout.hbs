    <!-- Checkout Start -->
    <form id="checkoutForm">
        <div class="container-fluid">
            <div class="row px-xl-5">
                <div class="col-lg-8">
                    <h5 class="section-title position-relative text-uppercase mb-3">
                        <span class="bg-secondary pr-3">Billing Address</span>
                    </h5>
                    {{#if status}}
                    {{#each userAddresses}}
                    <div class="pl-3 pt-3 bg-light p-2">
                        <div class="form-group">
                            <div>
                                <input type="radio" name="address" id="{{this._id}}" value="{{this._id}}" required>
                                <label class="mr-2 h5" for="{{this._id}}">Address {{inc @index}}</label>
                                <input class="px-3 py-1" type="text"
                                    value="{{this.Name}}, {{this.Mobile}}, {{this.HouseName}}, {{this.PostOfiice}} {{this.City}}, {{this.District}}, {{this.State}}, {{this.PIN}}"
                                    readonly>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-success my-3 rounded-pill" data-toggle="modal"
                        data-target="#exampleModal">
                        + Add new address
                    </button>
                    <input type="text" name="status" value="second" hidden>
                    {{else}}
                    <div class="bg-light p-30 mb-5">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label>Name</label>
                                <input id="name" name="Name" class="form-control" type="text"
                                    placeholder="Enter your name" required>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>E-mail</label>
                                <input id="email" name="Email" class="form-control" type="text"
                                    placeholder="example@gmail.com" required>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Mobile No</label>
                                <input id="mobile" name="Mobile" class="form-control" type="number"
                                    placeholder="Enter your mobile number" required>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>House Name</label>
                                <input id="house" name="HouseName" class="form-control" type="text"
                                    placeholder="Enter your house name" required>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Post Office</label>
                                <input id="postOffice" name="PostOffice" class="form-control" type="text"
                                    placeholder="Enter post office" required>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Nearest city</label>
                                <input id="city" name="City" class="form-control" type="text"
                                    placeholder="Enter your nearest city" required>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>District</label>
                                <input id="district" name="District" class="form-control" type="text"
                                    placeholder="Enter your district" required>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>State</label>
                                <input id="state" name="State" class="form-control" type="text"
                                    placeholder="Enter your state" required>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Enter PIN code</label>
                                <input id="pincode" name="PIN" class="form-control" type="number"
                                    placeholder="Enter PIN code" required>
                            </div>
                            <input type="text" name="status" value="first" hidden>
                        </div>
                    </div>
                    {{/if}}
                </div>
                <div class="col-lg-4">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span
                            class="bg-secondary pr-3">Order
                            Total</span></h5>
                    <div class="bg-light p-30 mb-5">
                        <div class="pt-2">
                            <div class="d-flex justify-content-between mt-2">
                                <h5>Total</h5>
                                <h5>₹{{total}}</h5>
                            </div>
                        </div>
                    </div>
                    <div class="mb-5">
                        <h5 class="section-title position-relative text-uppercase mb-3"><span
                                class="bg-secondary pr-3">Payment</span></h5>
                        <div class="bg-light p-30">
                            <div class="form-group">
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" name="paymentMethod" id="COD"
                                        value="Cash on Delivery" required>
                                    <label class="custom-control-label" for="COD">Cash on delivery</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" name="paymentMethod" id="ONLINE"
